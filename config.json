{
  "api": {
    "url": "https://your-api-domain.com:6443/admin-next/api-stats?apiId=your-api-id",
    "timeout": 15000,
    "retryAttempts": 3,
    "retryDelay": 1000,
    "cacheTimeout": 10000
  },
  "display": {
    "compactMode": true,
    "showRequests": true,
    "showTokens": true,
    "showCost": true,
    "showPercentage": true,
    "showTrends": true,
    "showApiStats": false,
    "maxLength": 120,
    "showUser": true,
    "showHost": true,
    "showWorkspace": true,
    "showGitBranch": true,
    "showTime": true,
    "showExpiry": true
  },
  "alerts": {
    "costWarningThreshold": 60,
    "costCriticalThreshold": 80,
    "enableNotifications": false
  },
  "cache": {
    "enablePersistent": true,
    "maxHistorySize": 10,
    "offlineMode": false
  },
  "statusbar": {
    "updateInterval": 15,
    "position": "right",
    "priority": 100,
    "separator": "|",
    "shellPS1Style": {
      "enabled": true,
      "format": "$(whoami)@$(hostname) $(basename \"$(pwd)\") $(git rev-parse --abbrev-ref HEAD 2>/dev/null || echo 'no-git') $(date +%H:%M:%S)",
      "showPromptChar": false,
      "customElements": {
        "showUser": true,
        "showHost": true,
        "showWorkingDir": true,
        "showGitBranch": true,
        "showTime": true,
        "showClaude": true
      }
    },
    "icons": {
      "normal": "🟢",
      "warning": "🟡",
      "critical": "🔴",
      "error": "❌",
      "trending_up": "📈",
      "trending_down": "📉",
      "claude": "🤖",
      "requests": "📊",
      "tokens": "🔤",
      "cost": "💰",
      "context": "🧠",
      "user": "👤",
      "host": "🖥️",
      "folder": "📁",
      "git": "🌿",
      "time": "🕐"
    }
  },
  "debug": {
    "enableLogging": false,
    "logLevel": "info",
    "logFile": ".claude/statusbar.log"
  }
}